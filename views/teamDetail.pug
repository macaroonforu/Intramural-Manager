extends layout

block content
  h1 Team profile for the !{team.name}
  h2 Coach: !{team.coach.name}
  h2 Sport: !{team.sport.name}
  h3 Players 

  ul
    each player in team_players
      li  
          a(href=player.url) #{player.name} 
    else
      li No players are participating on this team.   

  a(href=team.update_url) Update this team
  br 
  a(href=team.delete_url) Delete this team
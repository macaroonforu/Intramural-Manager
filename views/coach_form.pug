extends layout

block content
  h1 !{title}

  .container
    form(method='POST' action='')
      .form-group
        label(for='first_name') First Name: 
        input.form-control(type='text' required placeholder='First name' name='first_name' value=(undefined===coach?'':coach.first_name))
      .form.group
        label(for='family_name') Last Name: 
        input.form-control(type='text'  required placeholder='Last name' name='family_name' value=(undefined===coach?'':coach.family_name))
      .form-group
        label(for='summary') Summary: 
        input.form-control(type='text'  required  name='summary' value=(undefined===coach?'':coach.summary))
      .form-group
        label(for='email') Email: 
        input.form-control(type='text'  required  name='email' value=(undefined===coach?'':coach.email))
      
      button.btn.btn-primary(type='submit') Submit
  
  if errors
   ul
    p #[strong ERRORS! ]
    for error in errors
     li!= error.msg
extends layout

block content
  h1 !{title}


  form(method='POST' action='')
    label(for='first_name') First Name: 
    input(type='text' required placeholder='First name' name='first_name' value=(undefined===coach?'':coach.first_name))
    label(for='family_name') Last Name: 
    input(type='text'  required placeholder='Last name' name='family_name' value=(undefined===coach?'':coach.family_name))
    label(for='summary') Summary: 
    input(type='text'  required  name='summary' value=(undefined===coach?'':coach.summary))
    label(for='email') Email: 
    input(type='text'  required  name='email' value=(undefined===coach?'':coach.email))
    button(type='submit') Submit 
  
  if errors
   ul
    p #[strong ERRORS! ]
    for error in errors
     li!= error.msg
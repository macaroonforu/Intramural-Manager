extends layout

block content
  h1 !{title}

  .container
    form(method='POST' action='')
      .form-group
        label(for='name') Sport: 
        input.form-control(type = 'text', maxLength='20' placeholder='Any Team sport!' name='name' value=(undefined===sport ? '' : sport.name))
      button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg




extends layout

block content
  h1 !{title}

  form(method='POST' action='')
    label(for='name') Sport: 
    input(type = 'text', maxLength='20' placeholder='Any Team sport!' name='name' value=(undefined===sport ? '' : sport.name))
    button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg




extends layout

block content
  h1 !{title}

  .container
    form(method='POST' action='' enctype="multipart/form-data")
      .form-group
        label(for='name') Sport: 
        input.form-control(type = 'text', maxLength='20' placeholder='Any Team sport!' name='name' value=(undefined===sport ? '' : sport.name))
      
      
      .form-group 
        button.btn(type="button" onClick="document.querySelector('.imglabel').style.display='initial';document.querySelector('.form-control-file').style.display='initial';") Add an Image
        button.btn(type="button" onClick="document.querySelector('.imglabel').style.display='none';document.querySelector('.form-control-file').style.display='none';document.querySelector('.existing').value='';") Remove Existing Image
      .form-group 
        label(class="imglabel" style="display:none;" for='uploaded_file') Image: 
        input(style="display:none;" type="file" class="form-control-file" name="uploaded_image")
        input.form-control(style="display:none;" class="existing" type="text" name="existing_image" value=(undefined===sport?'':sport.img))
      button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg



